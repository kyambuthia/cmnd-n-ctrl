{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/policy.schema.json",
  "title": "PolicyConfig",
  "type": "object",
  "required": ["default_mode", "tool_rules"],
  "properties": {
    "default_mode": {
      "type": "string",
      "enum": ["deny", "allow", "confirm"]
    },
    "tool_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool_name", "capability_tier", "authorization"],
        "properties": {
          "tool_name": { "type": "string" },
          "capability_tier": {
            "oneOf": [
              { "type": "integer", "minimum": 0, "maximum": 3 },
              { "type": "string", "enum": ["ReadOnly", "LocalActions", "SystemActions"] }
            ]
          },
          "authorization": {
            "type": "string",
            "enum": ["deny", "allow", "confirm"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
