{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/tools.schema.json",
  "title": "ToolRegistry",
  "type": "object",
  "required": ["tools"],
  "properties": {
    "tools": {
      "type": "array",
      "items": { "$ref": "#/$defs/Tool" }
    }
  },
  "$defs": {
    "Tool": {
      "type": "object",
      "required": ["name", "description", "input_json_schema"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "input_json_schema": {
          "description": "Either a JSON Schema object or a serialized JSON string in lightweight transports.",
          "oneOf": [
            { "type": "object" },
            { "type": "string", "minLength": 2 }
          ]
        }
      },
      "additionalProperties": false
    },
    "ToolCall": {
      "type": "object",
      "required": ["name", "arguments_json"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "arguments_json": {
          "description": "Serialized JSON arguments payload",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "Evidence": {
      "type": "object",
      "required": ["summary", "artifacts"],
      "properties": {
        "summary": { "type": "string" },
        "artifacts": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "ToolResult": {
      "type": "object",
      "required": ["name", "result_json", "evidence"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "result_json": {
          "description": "Serialized JSON result payload",
          "type": "string"
        },
        "evidence": { "$ref": "#/$defs/Evidence" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
